<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="end"
            android:text="test"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/clearBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:text="C"
                android:textSize="20dp" />

            <Button
                android:id="@+id/swapSingBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:text="+/-"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/percentBnt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="%"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/divBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/primary"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="/"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/btn7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:text="7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:text="8"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="9"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/multBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/primary"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="X"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/btn4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:text="5"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="6"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/minBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/primary"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="–"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


            <Button
                android:id="@+id/btn1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:backgroundTint="@color/white" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"

                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="3"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/plusBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/primary"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="+"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                app:backgroundTint="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:padding="0dp"
                android:text="0"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:text="0"
                android:textSize="20dp" />


            <Button
                android:id="@+id/dotBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="•"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/resultBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:backgroundTint="@color/primary"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:text="="
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>